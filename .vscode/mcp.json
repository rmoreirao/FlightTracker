{
	"servers": {
		"postgres": {
			"type": "stdio",
			"command": "npx",
			"args": [
				"-y",
				"mcp-postgres-server@0.1.3"
			],
			"env": {
				"PG_HOST": "${input:pg_host}",
				"PG_PORT": "${input:pg_port}",
				"PG_USER": "${input:pg_user}",
				"PG_PASSWORD": "${input:pg_password}",
				"PG_DATABASE": "${input:pg_database}"
			}
		}
	},
	"inputs": [
		{
			"id": "pg_host",
			"type": "promptString",
			"description": "PostgreSQL Hostname"
		},
		{
			"id": "pg_port",
			"type": "promptString",
			"description": "PostgreSQL Port"
		},
		{
			"id": "pg_user",
			"type": "promptString",
			"description": "PostgreSQL Username"
		},
		{
			"id": "pg_password",
			"type": "promptString",
			"description": "PostgreSQL Password"
		},
		{
			"id": "pg_database",
			"type": "promptString",
			"description": "PostgreSQL Database Name"
		}
	]
}