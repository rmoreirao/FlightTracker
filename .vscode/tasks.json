{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build AppHost",
      "type": "process",
      "command": "dotnet",
      "args": [
        "build",
        "${workspaceFolder}/backend/src/FlightTracker.AppHost/FlightTracker.AppHost.csproj",
        "-c",
        "Debug"
      ],
      "problemMatcher": ["$msCompile"],
      "group": "build"
    },
    {
      "label": "run AppHost",
      "type": "process",
      "command": "dotnet",
      "args": [
        "run",
        "--project",
        "${workspaceFolder}/backend/src/FlightTracker.AppHost/FlightTracker.AppHost.csproj"
      ],
      "problemMatcher": ["$msCompile"],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    }
  ]
}
